<div class="d-flex  justify-content-between">
  <h1 class='mt-3 ml-3'><%= @task.title%></h1>
  <div class='d-flex align-items-center'>
    <% updating = image_tag('edit-button.png', size: '40') %>
    <%= link_to updating, edit_task_path, class: 'ml-3 mr-3' %>
  </div>
</div>

<div class="card m-3">
    <div class="card-body bg-light">
    <%= @task.details %></li>
    </div>
</div>

<div class='d-flex justify-content-left align-items-baseline m-3'>
  <% if @task.completed == true %>
    <%= image_tag('checked_box.png', height: '16', width: '20.8') %>
     <p class='ml-2'> This task is completed </p>
  <% else %>
     <%= image_tag('unchecked_box.png', size: '16') %>
     <p class='ml-2'> This task is not yet completed</p>
  <% end %>
</div>

<div class='ml-3'>
  <%= link_to '<- Back to list', tasks_path %>
</div>



